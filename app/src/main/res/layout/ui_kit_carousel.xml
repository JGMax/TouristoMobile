<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="ru.inteam.touristo.ui_kit.carousel.CarouselView">

    <ru.inteam.touristo.ui_kit.images.ContentImageView
        android:id="@+id/image"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/indicator"
        android:paddingHorizontal="@dimen/carousel_indicator_horizontal_margin"
        android:paddingVertical="@dimen/carousel_indicator_vertical_margin"
        android:src="@drawable/ic_indicator"
        android:visibility="gone"
        app:tint="@color/neutral_50" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        tools:listitem="@layout/ui_kit_carousel_item" />
</merge>
